<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossPlatformChatApp.App.Views.UserPage"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             xmlns:model="clr-namespace:CrossPlatformChatApp.App.Models"
             Title="UserPage"
             Background="{StaticResource Primary}">
    <Grid Margin="10, 20" 
          ColumnDefinitions="*,*" 
          RowDefinitions="auto,2*"
          ColumnSpacing="6"
          RowSpacing="6">
        <Frame Margin="10"
               BorderColor="{DynamicResource Tertiary}"
               BackgroundColor="{DynamicResource Tertiary}"
               CornerRadius="900"
               HeightRequest="175"
               WidthRequest="175"
               IsClippedToBounds="True"
               HorizontalOptions="Center"
               VerticalOptions="Center">
            <Image Source="{Binding ImageUrl}"  Grid.Column="0" Grid.Row="0"/>
        </Frame>
        <VerticalStackLayout Grid.Column="0" Grid.Row="1">
            <Button Text="+" Command="{Binding NewChatCommand}" />
            <ScrollView>
                <CollectionView ItemsSource="{Binding Chats}"
                                SelectionMode="Single"
                                ItemsLayout="VerticalGrid">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="{x:Type model:ChatDto}">
                            <Frame BorderColor="{DynamicResource Tertiary}"
                                   BackgroundColor="{DynamicResource Tertiary}"
                                   CornerRadius="4"
                                   Padding="8"
                                   Margin="8">
                                <VerticalStackLayout>
                                    <Label Text="{Binding Name}"
                                           HorizontalTextAlignment="Center"
                                           TextColor="{DynamicResource White}"
                                           FontSize="32"
                                           FontAttributes="Bold"
                                           TextTransform="Uppercase" />
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Column="1" Grid.Row="0">
            <Label Text="Name:"/>
            <Grid Margin="0,5">
                <Frame Opacity="0.3" BackgroundColor="White" CornerRadius="5" />
                <Entry BackgroundColor="Transparent" Placeholder="Enter Password" TextColor="Black" Margin="5,0"
                           PlaceholderColor="LightGray" Text="{Binding UserDetails.Name}" />
            </Grid>
            <Label Text="Email:"/>
            <Grid Margin="0,5">
                <Frame Opacity="0.3" BackgroundColor="White" CornerRadius="5" />
                <Entry BackgroundColor="Transparent" Placeholder="Enter Password" TextColor="Black" Margin="5,0"
                           PlaceholderColor="LightGray" Text="{Binding UserDetails.Email}" />
            </Grid>
            <Label Text="Password"/>
            <Grid Margin="0,5">
                <Frame Opacity="0.3" BackgroundColor="White" CornerRadius="5" />
                <Entry BackgroundColor="Transparent" Placeholder="Enter Password" TextColor="Black" Margin="5,0"
                           PlaceholderColor="LightGray" IsPassword="True" Text="{Binding UserDetails.Password}" />
            </Grid>
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Column="1" Grid.Row="1">
            <Button Text="+" Command="{Binding AddFriendCommand}" />
            <ScrollView>
                <CollectionView ItemsSource="{Binding Friends}"
                                SelectionMode="Single"
                                ItemsLayout="VerticalGrid">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="{x:Type model:UserDto}">
                            <Frame BorderColor="{DynamicResource Tertiary}"
                                   BackgroundColor="{DynamicResource Tertiary}"
                                   CornerRadius="4"
                                   Padding="8"
                                   Margin="8">
                                <Grid ColumnDefinitions="auto, *">
                                    <Frame Grid.Column="0"
                                           BorderColor="{DynamicResource Tertiary}"
                                           BackgroundColor="{DynamicResource Tertiary}"
                                           CornerRadius="90"
                                           HeightRequest="90"
                                           WidthRequest="90"
                                           IsClippedToBounds="True"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center">
                                        <Image Source="{Binding Image}"/>
                                    </Frame>
                                    <Label Grid.Column="1"
                                           Text="{Binding Name}"
                                           HorizontalTextAlignment="Center"
                                           TextColor="{DynamicResource White}"
                                           FontSize="32"
                                           FontAttributes="Bold"
                                           TextTransform="Uppercase" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>
        </VerticalStackLayout>
    </Grid>
</ContentPage>